{{!
    @template local_registration/register
    Example context (json):
    {
    }
}}

<div class="container">
<h1>User's details</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Country code</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{#userdetails}}
        <tbody>
            <tr>
                <td>{{name}}</td>
                <td>{{surname}}</td>
                <td>{{email}}</td>
                <td>{{country}}</td>
                <td>{{phone}}</td>
                <td><a href="../../local/registration/editform.php?r_id={{id}}" role="button" class="btn btn-primary"> edit </a>  
            <a href="javascript:void(0)" rel="{{id}}" class="btn btn-danger delete_link" onclick="myFunction()"> delete </a></td>
            </tr>
        </tbody>
    {{/userdetails}}

</table>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Attention !</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          Are you sure, want to delete this record?
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
        <a href="" role="button" class="btn btn-success modal_delete_link"> Yes </a>
          <button type="button" class="btn btn-danger" data-dismiss="modal"> Cancel </button>
        </div>
        
      </div>
    </div>
  </div>

<hr>
<input type="button" class="btn btn-success" value="create new" onclick="location.href='{{createurl}}'">

<script>

function myFunction(){

$(document).ready(function(){
    
    $(".delete_link").on('click', function(){

        var id = $(this).attr("rel");

        var delete_url = "../../local/registration/delete.php?r_id="+ id +" ";

        $(".modal_delete_link").attr("href", delete_url);

        $("#myModal").modal('show');


    })

    })
}

</script>