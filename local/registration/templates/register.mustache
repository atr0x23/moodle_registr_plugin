<div class="container">
<h1>User's details</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Country code</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{#userdetails}}
        <tbody>
            <tr>
                <td>{{name}}</td>
                <td>{{surname}}</td>
                <td>{{email}}</td>
                <td>{{country}}</td>
                <td>{{phone}}</td>
                <td><input type="button" class="btn btn-primary" value="edit" onclick="location.href='{{editurl}}'">  
                <input type="button" class="btn btn-danger" value="delete" onclick="location.href='{{deleteurl}}'"></td>
            </tr>
        </tbody>
    {{/userdetails}}

</table>
</div>

<hr>
<input type="button" class="btn btn-success" value="create new" onclick="location.href='{{createurl}}'">